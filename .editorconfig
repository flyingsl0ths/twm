root = true

[*]
insert_final_newline = true
charset = utf-8
indent_size = 4
indent_style = space
# Optional: git will commit as lf, this will only affect local files
end_of_line = lf

[CMakeLists.txt]
indent_size = 2

[*.{py,md,yml,sh,cmake,frag,vert}]
indent_size = 2

[*.{py,md,yml,sh,cmake}.in]
indent_size = 2
